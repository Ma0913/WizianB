<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wizian.admission.wizianb.repository.ApplicationIntroRepository">

    <select id="findItem" resultType="com.wizian.admission.wizianb.domain.ApplicationIntroduce">
        SELECT * FROM entry_sel_intro WHERE rcrt_no=#{rcrtNo};
    </select>

    <insert id="saveAnswer" parameterType="com.wizian.admission.wizianb.domain.ApplicationIntroduce">
        INSERT INTO entry_apply_intro(item_no,aply_no,rcrt_no,answer)
        VALUES (#{itemNo},#{aplyNo},#{rcrtNo},#{answer});
    </insert>

    <select id="findAnswers" resultType="com.wizian.admission.wizianb.domain.ApplicationIntroduce">
        SELECT * FROM entry_apply_intro WHERE aply_no=#{aplyNo} AND rcrt_no=#{rcrtNo} AND item_no=#{itemNo};
    </select>

</mapper>